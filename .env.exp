# Database
DATABASE_URL=postgresql+psycopg2://auth:auth@auth-db:5432/authdb

# JWT keys inside container
PRIVATE_KEY_PATH=/keys/private_key.pem
PUBLIC_KEY_PATH=/keys/public_key.pem

# Access token lifetime (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Initial admin (dev only)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# CORS (exact origins, no trailing slashes)
ALLOWED_ORIGINS=http://host.docker.internal:8000,http://host.docker.internal:5173,http://localhost:8001,http://localhost:5173,http://localhost:8000 

# Public base URL of this service (used in reset links and issuer default)
PUBLIC_BASE_URL=http://localhost:8001

# Password reset token expiry (minutes)
PASSWORD_RESET_EXPIRES_MINUTES=30

# Version surfaced at /version
APP_VERSION=dev

# JWT settingsss
JWT_ISSUER=http://localhost:8001
# Optional audiences (comma-separated). Leave empty if not needed.
JWT_AUDIENCE=

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_DIGIT=false
REQUIRE_LETTER=false
REQUIRE_SPECIAL=false
