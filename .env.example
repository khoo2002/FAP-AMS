# Copy this to .env and edit values for your environment

# Database
DATABASE_URL=postgresql+psycopg2://auth:auth@auth-db:5432/authdb

# Keys (paths inside the auth-service container)
PRIVATE_KEY_PATH=/keys/private_key.pem
PUBLIC_KEY_PATH=/keys/public_key.pem

# Token lifetime in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Initial admin (dev convenience) - set to create the first admin user when DB empty
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminpass

# Comma-separated list of allowed CORS origins for the admin UI / clients
# Use '*' for wide-open in dev (not recommended in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173/

# Public base URL (optional) used to build absolute password reset links
PUBLIC_BASE_URL=http://localhost:8001

# Password reset token expiry in minutes
PASSWORD_RESET_EXPIRES_MINUTES=30

# App version (optional) surfaced at /version
APP_VERSION=dev

# Optional JWT settings
JWT_ISSUER=http://localhost:8001
# Comma-separated accepted audiences for validation (optional)
JWT_AUDIENCE=

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_DIGIT=true
REQUIRE_LETTER=true
REQUIRE_SPECIAL=false
